PH_DOVECOT_LOG_FILE
PH_DOVECOT_SIEVE_LOG_FILE
PH_DOVECOT_LMTP_LOG_FILE {
    compress
    weekly
    rotate 10
    create 0600 PH_VMAIL_USER_NAME PH_VMAIL_GROUP_NAME
    missingok

    # Use bzip2 for compress.
    compresscmd $(which bzip2)
    uncompresscmd $(which bunzip2)
    compressoptions -9
    compressext .bz2

    postrotate
        doveadm log reopen
    endscript
}
